<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".ui.home.RecommendationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 추천할 옷이 없을 때만 보이는 메시지 -->
        <TextView
            android:id="@+id/tv_no_recommendation"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="날씨에 어울리는 옷이 부족합니다.\n'옷' 탭에서 옷을 더 등록해주세요!"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <!-- 날씨 정보 섹션 -->
        <TextView
            android:id="@+id/tv_weather_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="날씨 정보"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_no_recommendation" />

        <TextView
            android:id="@+id/tv_weather_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_weather_title"
            tools:text="최고: 25°C(체감 26°C)\n최저: 15°C(체감 14°C)\n날씨: 맑음, 강수확률: 10%" />

        <!-- 최적의 코디 섹션 -->
        <TextView
            android:id="@+id/tv_best_combo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="최적의 코디"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_weather_summary" />

        <Button
            android:id="@+id/button_save_style"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이 코디 저장하기"
            app:layout_constraintBottom_toBottomOf="@id/tv_best_combo_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_best_combo_title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_best_combo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_best_combo_title"
            tools:listitem="@layout/item_recommendation_clothing"
            tools:itemCount="3"/>

        <!-- 추천 상의 섹션 -->
        <TextView
            android:id="@+id/tv_tops_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="추천 상의"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_best_combo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tops"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tops_title"
            tools:listitem="@layout/item_recommendation_clothing"
            tools:itemCount="5"/>

        <!-- 추천 하의 섹션 -->
        <TextView
            android:id="@+id/tv_bottoms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="추천 하의"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_tops" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bottoms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bottoms_title"
            tools:listitem="@layout/item_recommendation_clothing"
            tools:itemCount="5"/>

        <!-- 챙겨갈 아우터 섹션 -->
        <TextView
            android:id="@+id/tv_packable_outer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="챙겨갈 아우터 챙기세요!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_bottoms"
            tools:visibility="visible"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_packable_outer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_packable_outer_title"
            tools:listitem="@layout/item_recommendation_clothing"
            tools:itemCount="1"
            tools:visibility="visible"/>

        <!-- 우산 추천 섹션 -->
        <TextView
            android:id="@+id/tv_umbrella_recommendation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:drawableStart="@android:drawable/ic_dialog_info"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_packable_outer"
            tools:text="비가 많이 와요. 큰 우산은 필수!"
            tools:visibility="visible"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
