<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.style.SaveStyleFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_save_style"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="나만의 스타일 만들기"
        app:titleCentered="true" />

    <ScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_save_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_style_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/text_input_box_stroke_color"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:hintTextColor="@color/tab_selected_text">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_style_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="스타일 이름을 입력하세요 (최대 20자)"
                    android:inputType="text"
                    android:maxLength="20" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_season_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="계절 선택"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_season_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:chipSpacingHorizontal="8dp"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_spring"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="봄"
                    android:textColor="@color/chip_textcolor_selector"
                    app:chipBackgroundColor="@color/chip_backgroundcolor_selector"
                    app:chipStrokeColor="@color/fab_color_style_tab"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_summer"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여름"
                    android:textColor="@color/chip_textcolor_selector"
                    app:chipBackgroundColor="@color/chip_backgroundcolor_selector"
                    app:chipStrokeColor="@color/fab_color_style_tab"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_fall"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가을"
                    android:textColor="@color/chip_textcolor_selector"
                    app:chipBackgroundColor="@color/chip_backgroundcolor_selector"
                    app:chipStrokeColor="@color/fab_color_style_tab"
                    app:chipStrokeWidth="2dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_winter"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="겨울"
                    android:textColor="@color/chip_textcolor_selector"
                    app:chipBackgroundColor="@color/chip_backgroundcolor_selector"
                    app:chipStrokeColor="@color/fab_color_style_tab"
                    app:chipStrokeWidth="2dp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tv_selection_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="스타일에 포함할 옷을 선택하세요 (최대 10개)"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout_save_style_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:tabBackground="@android:color/white"
                app:tabGravity="fill"
                app:tabIndicator="@drawable/tab_indicator_custom"
                app:tabIndicatorAnimationMode="linear"
                app:tabIndicatorColor="@color/tab_selected_text"
                app:tabIndicatorFullWidth="false"
                app:tabIndicatorGravity="bottom"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/tab_selected_text"
                app:tabTextColor="@color/tab_unselected_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom_nav_background" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_clothing_selection"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:nestedScrollingEnabled="true"
                android:layout_marginHorizontal="12dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="4"
                tools:listitem="@layout/item_clothing_selectable" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom_nav_background" />

            <Button
                android:id="@+id/button_save_style_final"
                style="@style/Widget.Material3.Button.UnelevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:enabled="false"
                android:paddingHorizontal="48dp"
                android:text="저장하기"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@color/fab_color_style_tab"
                app:cornerRadius="24dp" />

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>