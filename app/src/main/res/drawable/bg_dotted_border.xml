<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 테두리 선 설정 -->
    <stroke
        android:width="2dp"
        android:color="#BDBDBD"
        android:dashWidth="12dp"
        android:dashGap="8dp" />

    <!-- 모서리를 둥글게 -->
    <corners android:radius="16dp" />

    <!-- 내부 배경색 (아주 연한 회색) -->
    <solid android:color="#F5F5F5" />
</shape>